<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="86px">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160px">
        <ImageView
            android:id="@+id/left_menu_listitem_icon"
            android:layout_marginLeft="67px"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/left_menu_listitem_title"
            android:layout_toRightOf="@id/left_menu_listitem_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="36px"
            android:textColor="#fff"
            android:text="关于我们"
            android:layout_marginLeft="20px"/>
        <ImageView
            android:id="@+id/left_menu_listitem_carve"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/left_menu_listitem_icon"
            android:background="#fff"
            android:layout_height="20px" />
    </RelativeLayout>

</RelativeLayout>